				INST_PREF=/tmp/imscp
				ROOT_CONF=${INST_PREF}/usr/local/etc
				SYSTEM_ROOT=${INST_PREF}/usr/local/www/imscp
				SYSTEM_CONF=${INST_PREF}/usr/local/etc/imscp
				SYSTEM_LOG=${INST_PREF}/var/log/imscp
				SYSTEM_APACHE_BACK_LOG=${INST_PREF}/usr/local/www/logs/backup
				SYSTEM_VIRTUAL=${INST_PREF}/usr/local/www/data/virtual
				SYSTEM_AWSTATS=${INST_PREF}/usr/local/www/awstats
				SYSTEM_FCGI=${INST_PREF}/usr/local/www/data/fcgi
				SYSTEM_SCOREBOARDS=${INST_PREF}/usr/local/www/data/scoreboards
				SYSTEM_MAIL_VIRTUAL=${INST_PREF}/var/mail/virtual

				APACHE_EXT_CONF=${INST_PREF}/usr/local/etc/apache22/Includes
				APACHE_MOD_CONF=${INST_PREF}/usr/local/etc/apache22/extra
				ROOT_APACHE_CONF=${ROOT_CONF}/apache22

				ROOT_COURIER_CONF=${ROOT_CONF}/courier-imap

				ROOT_POSTFIX_CONF=${ROOT_CONF}/postfix
				ROOT_SASL2_CONF=/usr/local/lib/sasl2
'
FOLDERS='${SYSTEM_LOG}/imscp-arpl-msgr'
